<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="csrf-token" content="<%= csrfToken %>">
    <title>
        <%= title %>
    </title>
    <link rel="stylesheet" href="/css/style.css">
</head>

<body>
    <%- include('partials/header') %>

        <main>
            <div class="container">
                <h1>User Management</h1>
                <p class="text-muted">All registered users</p>

                <div class="admin-nav">
                    <a href="/admin/logs" class="btn btn-secondary">Audit Logs</a>
                    <a href="/admin/users" class="btn btn-secondary">User Management</a>
                    <a href="/admin/activities" class="btn btn-secondary">Activity Management</a>
                </div>

                <% if (users && users.length> 0) { %>
                    <div class="table-container">
                        <table class="data-table">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Username</th>
                                    <th>Email</th>
                                    <th>Name</th>
                                    <th>Admin</th>
                                    <th>Created</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% users.forEach(u=> { %>
                                    <tr data-user-id="<%= u.id %>">
                                        <td>
                                            <%= u.id %>
                                        </td>
                                        <td>
                                            <%= u.username %>
                                        </td>
                                        <td>
                                            <%= u.email %>
                                        </td>
                                        <td>
                                            <%= u.first_name || '' %>
                                                <%= u.last_name || '' %>
                                        </td>
                                        <td>
                                            <%= u.is_admin ? 'Yes' : 'No' %>
                                        </td>
                                        <td>
                                            <%= new Date(u.created_at).toLocaleDateString() %>
                                        </td>
                                        <td>
                                            <% if (u.id !==user.id) { %>
                                                <button class="btn btn-danger btn-small delete-user-btn"
                                                    data-user-id="<%= u.id %>" data-username="<%= u.username %>">
                                                    Delete
                                                </button>
                                                <% } else { %>
                                                    <span class="text-muted">(You)</span>
                                                    <% } %>
                                        </td>
                                    </tr>
                                    <% }); %>
                            </tbody>
                        </table>
                    </div>
                    <% } else { %>
                        <p class="text-muted">No users found.</p>
                        <% } %>
            </div>
        </main>

        <%- include('partials/footer') %>

            <script>
                const csrfToken = document.querySelector('meta[name="csrf-token"]')?.content || '';
                document.addEventListener('DOMContentLoaded', () => {
                    const deleteButtons = document.querySelectorAll('.delete-user-btn');

                    deleteButtons.forEach(btn => {
                        btn.addEventListener('click', async function () {
                            const userId = this.dataset.userId;
                            const username = this.dataset.username;

                            if (!confirm(`Are you sure you want to delete user "${username}"? This will delete all their activities and cannot be undone.`)) {
                                return;
                            }

                            try {
                                // Use relative path to preserve proxy prefix (e.g., /usr/347)
                                // From /admin/users page, delete endpoint is users/:id/delete
                                const response = await fetch(`users/${userId}/delete`, {
                                    method: 'POST',
                                    headers: {
                                        'Content-Type': 'application/json',
                                        'X-CSRF-Token': csrfToken
                                    }
                                });

                                const data = await response.json();

                                if (data.success) {
                                    // Remove the row from the table
                                    const row = document.querySelector(`tr[data-user-id="${userId}"]`);
                                    if (row) {
                                        row.remove();
                                    }
                                    alert('User deleted successfully');
                                } else {
                                    alert('Error: ' + (data.error || 'Failed to delete user'));
                                }
                            } catch (error) {
                                console.error('Delete error:', error);
                                alert('Failed to delete user');
                            }
                        });
                    });
                });
            </script>
</body>

</html>