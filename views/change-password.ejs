<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= title %>
    </title>
    <link rel="stylesheet" href="/css/style.css">
</head>

<body>
    <%- include('partials/header') %>

        <main>
            <div class="container">
                <h1>
                    <%= resetMode ? 'Reset Password' : 'Change Password' %>
                </h1>

                <div class="form-container" id="passwordFormContainer">
                    <div id="alert-container"></div>

                    <% if (errors && errors.length) { %>
                        <div class="alert alert-error">
                            <ul class="no-margin left-indent">
                                <% errors.forEach(function(err) { %>
                                    <li>
                                        <%= err %>
                                    </li>
                                    <% }) %>
                            </ul>
                        </div>
                        <% } %>

                            <% if (success) { %>
                                <div class="alert alert-success">
                                    <%= success %>
                                </div>
                                <% } %>

                                    <form id="passwordForm" class="activity-form">
                                        <input type="hidden" name="_csrf" value="<%= csrfToken %>" id="csrfToken">
                                        <input type="hidden" name="resetMode" value="<%= resetMode %>" id="resetMode">

                                        <% if (!resetMode) { %>
                                            <div class="form-group">
                                                <label for="current_password">Current Password:</label>
                                                <input type="password" id="current_password" name="current_password"
                                                    required autocomplete="current-password">
                                            </div>
                                            <% } %>

                                                <div class="form-group">
                                                    <label for="new_password">New Password:</label>
                                                    <input type="password" id="new_password" name="new_password"
                                                        required autocomplete="new-password">
                                                    <span class="form-help">At least 8 chars, with upper, lower, number,
                                                        special.</span>
                                                </div>

                                                <div class="form-group">
                                                    <label for="confirm_password">Confirm New Password:</label>
                                                    <input type="password" id="confirm_password" name="confirm_password"
                                                        required autocomplete="new-password">
                                                </div>

                                                <div class="form-group flex-gap-12">
                                                    <button type="submit" class="btn btn-primary flex-1">
                                                        <%= resetMode ? 'Reset Password' : 'Update Password' %>
                                                    </button>
                                                    <a href="<%= resetMode ? '/' : '/profile' %>"
                                                        class="btn btn-secondary flex-1 flex-center">Back
                                                        to <%= resetMode ? 'Home' : 'Profile' %></a>
                                                </div>
                                    </form>
                </div>
            </div>
        </main>

        <%- include('partials/footer') %>

            <script src="/js/modules/account/change-password.js"></script>
</body>

</html>