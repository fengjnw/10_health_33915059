<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= title %>
    </title>
    <link rel="stylesheet" href="/css/style.css">
</head>

<body>
    <%- include('partials/header') %>

        <main>
            <div class="container">
                <h1>Change Password</h1>

                <div class="form-container">
                    <% if (errors && errors.length) { %>
                        <div class="alert alert-error">
                            <ul style="margin: 0; padding-left: 1.2rem;">
                                <% errors.forEach(function(err) { %>
                                    <li>
                                        <%= err %>
                                    </li>
                                    <% }) %>
                            </ul>
                        </div>
                        <% } %>

                            <% if (success) { %>
                                <div class="alert alert-success">
                                    <%= success %>
                                </div>
                                <% } %>

                                    <form method="POST" action="/auth/change-password" class="activity-form">
                                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">

                                        <div class="form-group">
                                            <label for="current_password">Current Password:</label>
                                            <input type="password" id="current_password" name="current_password"
                                                required autocomplete="current-password">
                                        </div>

                                        <div class="form-group">
                                            <label for="new_password">New Password:</label>
                                            <input type="password" id="new_password" name="new_password" required
                                                autocomplete="new-password">
                                            <span class="form-help">At least 8 chars, with upper, lower, number,
                                                special.</span>
                                        </div>

                                        <div class="form-group">
                                            <label for="confirm_password">Confirm New Password:</label>
                                            <input type="password" id="confirm_password" name="confirm_password"
                                                required autocomplete="new-password">
                                        </div>

                                        <div class="form-group" style="display: flex; gap: 12px;">
                                            <button type="submit" class="btn btn-primary" style="flex: 1;">Update
                                                Password</button>
                                            <a href="/profile" class="btn btn-secondary"
                                                style="flex: 1; display: flex; align-items: center; justify-content: center;">Back
                                                to Profile</a>
                                        </div>
                                    </form>
                </div>
            </div>
        </main>

        <%- include('partials/footer') %>
</body>

</html>