<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= title %>
    </title>
    <link rel="stylesheet" href="/css/style.css">
</head>

<body>
    <%- include('partials/header') %>

        <main>
            <div class="container">
                <h1>Login</h1>

                <div class="form-container">
                    <% if (errors && errors.length> 0) { %>
                        <div class="alert alert-error">
                            <ul>
                                <% errors.forEach(error=> { %>
                                    <li>
                                        <%= error %>
                                    </li>
                                    <% }); %>
                            </ul>
                        </div>
                        <% } %>

                            <form method="POST" action="/auth/login" class="auth-form">
                                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                <div class="form-group">
                                    <label for="username">Username:</label>
                                    <input type="text" id="username" name="username" required
                                        value="<%= locals.formData ? formData.username || '' : '' %>">
                                </div>

                                <div class="form-group">
                                    <label for="password">Password:</label>
                                    <input type="password" id="password" name="password" required>
                                </div>

                                <button type="submit" class="btn btn-primary">Login</button>
                            </form>

                            <p class="form-footer">
                                Don't have an account? <a href="/auth/register">Register here</a><br>
                                <a href="/auth/forgot-password" class="text-small text-muted">Forgot your
                                    password?</a>
                            </p>

                            <div class="demo-credentials">
                                <div class="credentials-grid">
                                    <div class="credential-item">
                                        <p><strong>Demo User Account:</strong></p>
                                        <p>Username: <code>gold</code></p>
                                        <p>Password: <code>smiths</code></p>
                                    </div>
                                    <div class="credential-item">
                                        <p><strong>Demo Admin Account:</strong></p>
                                        <p>Username: <code>admin</code></p>
                                        <p>Password: <code>qwerty</code></p>
                                    </div>
                                </div>
                            </div>
                </div>
            </div>
        </main>

        <%- include('partials/footer') %>
</body>

</html>