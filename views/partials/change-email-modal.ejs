<!-- Change Email Modal -->
<div id="changeEmailModal" class="modal">
    <div class="modal-content">
        <span class="close">&times;</span>
        <h2>Change Email Address</h2>

        <div id="emailStep" class="modal-step">
            <h3>Step 1: Enter New Email</h3>
            <form id="changeEmailForm">
                <div class="form-group">
                    <label for="newEmail">New Email Address:</label>
                    <input type="email" id="newEmail" name="newEmail" required>
                </div>
                <button type="submit" class="btn">Send Verification Code</button>
            </form>
        </div>

        <div id="verificationStep" class="modal-step" style="display: none;">
            <h3>Step 2: Verify Your Email</h3>
            <p id="verificationEmail" style="color: #16a085; font-weight: bold;"></p>
            <p style="color: #666; font-size: 0.9rem;">We've sent a verification code to your new email address. Enter
                it below or click the link in the email.</p>

            <form id="verifyEmailForm">
                <div class="form-group">
                    <label for="verificationCode">Verification Code:</label>
                    <input type="text" id="verificationCode" name="verificationCode" placeholder="e.g., ABC123"
                        maxlength="10" required>
                </div>
                <div id="previewUrl"
                    style="margin-bottom: 1rem; padding: 1rem; background: #f0f9f7; border-radius: 4px; display: none;">
                    <p style="margin: 0 0 0.5rem 0; font-size: 0.85rem; color: #666;">ðŸ“§ Development: Click the link
                        below to preview the verification email:</p>
                    <a id="previewLink" href="" target="_blank"
                        style="word-break: break-all; font-size: 0.8rem;">Preview Email</a>
                </div>
                <button type="submit" class="btn">Verify Email</button>
                <button type="button" class="btn btn-secondary" id="resendBtn">Resend Code</button>
            </form>
        </div>

        <div id="successStep" class="modal-step" style="display: none;">
            <h3>âœ“ Email Changed Successfully</h3>
            <p>Your email address has been updated.</p>
            <button type="button" class="btn" id="closeSuccessBtn">Close</button>
        </div>

        <div id="errorStep" class="modal-step" style="display: none;">
            <p id="errorMessage" style="color: #e74c3c; font-weight: bold;"></p>
            <button type="button" class="btn" id="backBtn">Back</button>
        </div>
    </div>
</div>